$(require gc    )
$(require inits )
$(require ruby  )
$(require util  )

__rb_funcall () {
  local recv=$1
  local mid=$2
  local n=$3
  local va_alist=$4
  local class

  __rb_class_of "$recv"
  __rb_call "$__" "$recv" "$mid" "$n" "$@"
}

ruby_init () {
  local -A frame=()
  local funcs
  local vars

  funcs=(
    Init_Object
    Init_heap
    Init_var_tables
    rb_call_inits
    ruby_init
  )

  vars=(
    RUBSH_LIB
    __
    __heap
    __last_id
    __rb_cClass
    __rb_cFalseClass
    __rb_cNilClass
    __rb_cObject
    __rb_cTrueClass
    __rb_class_tbl
    __rb_global_tbl
    __ruby_class
    __ruby_frame
    __ruby_scope
    __ruby_top_self
    __top_frame
    __top_scope
    self
  )
  unset -v "${vars[@]}"

  __next_id
  __top_frame=$__
  __ruby_frame=$__
  Init_heap
  __next_id
  __ruby_scope=$__
  __top_scope=$__

  rb_call_inits
  __ruby_class=$__rb_cObject
  frame[self]=$__ruby_top_self
  __put_object "$__ruby_frame" frame

  unset -f "${funcs[@]}"
  __=''
}

