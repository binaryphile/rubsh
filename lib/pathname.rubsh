class Pathname; {
  def + <<'  end'
    local __self=$1

    __=${!__self}/$2
    __classh[__]=String
  end

  def basename <<'  end'
    local __self=$1

    __=${!__self##*/}
    __classh[__]=Pathname
  end

  def directory? <<'  end'
    local __self=$1

    __='""'
    __classh[__]=String
    [[ -d ${!__self} ]]
  end

  def dirname <<'  end'
    local __self=$1

    [[ ${!__self} == */* ]] && __=${!__self%/*} || __=.
    __classh[__]=Pathname
  end
}

