#!/usr/bin/env bash

RUBSH_LIB=$(dirname "$(readlink -f "$BASH_SOURCE")")
export RUBSH_PATH=$RUBSH_LIB${RUBSH_PATH:+:}${RUBSH_PATH:-}:.
source "$RUBSH_LIB"/require.rubsh

$(require utils)
$(require inits)

__strict_mode on
__glob off

ruby_init

$(__return_if_sourced)

(( $# )) || __die "$usage"
source "$@"
